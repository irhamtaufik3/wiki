---

<section id="our-team" class="py-12 px-4 max-w-7xl mx-auto text-gray-900 dark:text-white">
  <h2 class="text-3xl font-bold mb-10 text-center">Our Team</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-10 justify-items-center">
    {teamMembers.map((member) => (
      <a
        href={member.url}
        target="_blank"
        rel="noopener noreferrer"
        class="group text-center transform transition-transform hover:scale-105 w-full max-w-xs"
      >
        <div class="flex flex-col items-center">
          <img
            src={member.image}
            alt={member.name}
            class="w-28 h-28 rounded-full object-cover aspect-square border-4 border-gray-200 dark:border-gray-700 mb-4"
          />
          <h3 class="text-lg font-semibold text-black dark:text-white group-hover:underline">
            {member.name}
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">{member.role}</p>
        </div>
      </a>
    ))}
  </div>
</section>
