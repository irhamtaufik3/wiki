---
const testnetNodes = [
  { name: "0G Labs", role: "Storage, DA Node", status: "active", logo: "/logos/0g.png", url: "https://storagescan-galileo.0g.ai/" },
  { name: "Cess", role: "Miner Storage", status: "active", logo: "/logos/cess.png", url: "https://cess.network/" },
  { name: "T3rn", role: "Executor Node", status: "active", logo: "/logos/t3rn.png", url: "https://www.t3rn.io/" },
  { name: "Dria", role: "Dria Edge Ai", status: "active", logo: "/logos/dria.png", url: "https://dria.co/" },
  { name: "Multiple Network", role: "Multiple Node", status: "active", logo: "/logos/multiple-network.png", url: "https://www.app.multiple.cc/#/signup?inviteCode=JgdYCvq3" },
  { name: "Pipe Network", role: "Pop Node", status: "active", logo: "/logos/pipe-network.png", url: "https://pipe.network/nodeoperators" },
  { name: "Blockcast", role: "Beacon Node", status: "active", logo: "/logos/blockcast.png", url: "https://app.blockcast.network?referral-code=Mi5UWv" },
  { name: "Hyperspace", role: "aiOS Node", status: "active", logo: "/logos/hyperspace.png", url: "https://aios.network/" },
];
---

<section id="EcosystemParticipation" class="text-white py-12 px-4 max-w-7xl mx-auto">
  <h2 class="text-3xl font-bold mb-6 text-center">Ecosystem Participation</h2>

  <div id="testnetContent">
    <p class="text-center max-w-2xl mx-auto mb-10 text-gray-400">
        A showcase of blockchain projects we've supported through node operations, both past and present.
    </p>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      {testnetNodes.map((node) => (
        <div class="bg-[#1A1A1D] p-6 rounded-xl shadow-md flex flex-col justify-between min-h-[200px] overflow-hidden">
          <div>
            <img src={node.logo} alt={node.name} class="h-10 w-10 mb-4" />
            <h3 class="text-lg font-semibold">{node.name}</h3>
            <p class="text-sm text-gray-400">{node.role}</p>
          </div>
          <div class="mt-4 flex justify-between items-center">
            <a href={node.url} target="_blank" rel="noopener noreferrer" class="text-sm text-blue-400 hover:underline truncate max-w-[80%]">
              View
            </a>
            {node.status === "active" ? (
              <span class="h-3 w-3 rounded-full bg-green-500 inline-block"></span>
            ) : (
              <span class="bg-gray-700 text-xs px-2 py-0.5 rounded-md">ENDED</span>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const mainnetBtn = document.getElementById("mainnetBtn");
    const testnetBtn = document.getElementById("testnetBtn");
    const mainnetContent = document.getElementById("mainnetContent");
    const testnetContent = document.getElementById("testnetContent");

    mainnetBtn.addEventListener("click", () => {
      mainnetBtn.classList.add("bg-blue-600");
      mainnetBtn.classList.remove("bg-gray-600");
      testnetBtn.classList.add("bg-gray-600");
      testnetBtn.classList.remove("bg-blue-600");

      mainnetContent.classList.remove("hidden");
      testnetContent.classList.add("hidden");
    });

    testnetBtn.addEventListener("click", () => {
      testnetBtn.classList.add("bg-blue-600");
      testnetBtn.classList.remove("bg-gray-600");
      mainnetBtn.classList.add("bg-gray-600");
      mainnetBtn.classList.remove("bg-blue-600");

      testnetContent.classList.remove("hidden");
      mainnetContent.classList.add("hidden");
    });
  });
</script>
